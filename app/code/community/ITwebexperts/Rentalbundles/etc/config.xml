<?xml version="1.0"?>
<config>
    <modules>
        <ITwebexperts_Rentalbundles>
            <version>1.0.0</version>
        </ITwebexperts_Rentalbundles>
    </modules>
    <frontend>
        <layout>
            <updates>
                <rentalbundles>
                    <file>rentalbundles.xml</file>
                </rentalbundles>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <rentalbundles>
                <class>ITwebexperts_Rentalbundles_Block</class>
            </rentalbundles>
            <payperrentals>
                <rewrite>
                    <bundle_catalog_product_view_type_bundle_option_checkbox>ITwebexperts_Rentalbundles_Block_Bundle_Catalog_Product_View_Type_Bundle_Option_Checkbox</bundle_catalog_product_view_type_bundle_option_checkbox>
                </rewrite>
            </payperrentals>
        </blocks>
        <helpers>
            <rentalbundles>
                <class>ITwebexperts_Rentalbundles_Helper</class>
            </rentalbundles>
        </helpers>
        <resources>
            <rentalbundles_setup>
                <setup>
                    <module>ITwebexperts_Rentalbundles</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </rentalbundles_setup>
            <rentalbundles_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </rentalbundles_write>
            <rentalbundles_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </rentalbundles_read>
        </resources>
    </global>
</config> 